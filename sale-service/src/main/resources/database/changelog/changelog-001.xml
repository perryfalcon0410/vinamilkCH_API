<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="2021-03-23-create-table-products" author="tuanba">
        <createTable tableName="PRODUCTS">
            <column name="ID" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="PRODUCT_NAME" type="varchar(255)"/>
            <column name="PARENT_PRODUCT_CODE" type="varchar(255)">
                <constraints unique="true"/>
            </column>
            <column name="STATUS" type="tinyint">
                <constraints nullable="true"/>
            </column>
            <column name="UOM1" type="varchar(50)"/>
            <column name="UOM2" type="varchar(50)"/>
            <column name="CONVFACT" type="int">
                <constraints nullable="true"/>
            </column>
            <column name="CAT_ID" type="bigint"/>
            <column name="SUB_CAT_ID" type="bigint"/>
            <column name="BRAND_ID" type="bigint"/>
            <column name="FLAVOUR_ID" type="bigint"/>
            <column name="PACKING_ID" type="bigint"/>
            <column name="PRODUCT_TYPE" type="int"/>
            <column name="EXPIRY_TYPE" type="int"/>
            <column name="EXPIRY_NUM" type="int"/>
            <column name="BARCODE" type="varchar(50)"/>
            <column name="PRODUCT_LEVEL_ID" type="bigint"/>
            <column name="CHECK_LOT" type="int"/>
            <column name="SAFETY_STOCK" type="int"/>
            <column name="COMMISSION" type="float"/>
            <column name="VOLUMN" type="float"/>
            <column name="GROSS_WEIGHT" type="float"/>
            <column name="NET_WEIGHT" type="float"/>
            <column name="SUB_CAT_T_ID" type="bigint"/>
            <column name="GROUP_CAT_ID" type="bigint"/>
            <column name="GROUP_VAT" type="varchar(255)"/>
            <column name="REF_PRODUCT_ID" type="bigint"/>
            <column name="REF_APPLY_DATE" type="date"/>
            <column name="CONVFACT2" type="int"/>
            <column name="IS_CORE" type="tinyint"/>
            <column name="IS_PURGE_PRODUCT" type="tinyint"/>
            <column name="IS_COMBO" type="tinyint"/>
            <column name="COMBO_PRODUCT_ID" type="bigint"/>

            <column name="CREATE_USER" type="varchar(255)"/>
            <column name="CREATED_AT" type="datetime"/>
            <column name="CREATE_USER" type="varchar(255)"/>
            <column name="UPDATED_AT" type="datetime"/>
            <column name="DELETED_AT" type="datetime"/>
        </createTable>

        <rollback>
            <dropTable tableName="PRODUCTS"/>
        </rollback>
    </changeSet>

    <changeSet id="2021-03-23-create-table-product-info" author="tuanba">
        <createTable tableName="PRODUCT_INFO">
            <column name="ID" type="bigint" autoIncrement="true">
