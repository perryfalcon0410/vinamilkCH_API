            </column>
            <column name="PRODUCT_INFO_CODE" type="varchar(255)">
                <constraints unique="true"/>
            </column>
            <column name="PRODUCT_INFO_NAME" type="varchar(255)"/>
            <column name="DESCRIPTION" type="varchar(255)"/>
            <column name="TYPE" type="int"/>
            <column name="STATUS" type="tinyint" defaultOnNull="0"/>

            <column name="CREATED_AT" type="datetime"/>
            <column name="UPDATED_AT" type="datetime"/>
            <column name="DELETED_AT" type="datetime"/>
        </createTable>

        <rollback>
            <dropTable tableName="PRODUCT_INFO"/>
        </rollback>
    </changeSet>

    <changeSet id="2021-03-23-create-table-prices" author="tuanba">
        <createTable tableName="PRICES">
            <column name="ID" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="PRODUCT_ID" type="bigint">
