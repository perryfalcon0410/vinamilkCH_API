                               tableName="SHOP_PARAM"
                               uniqueColumns="CODE"/>
        <rollback>
            <dropColumn columnName="CODE" tableName="SHOP_PARAM"/>
        </rollback>
    </changeSet> -->

</databaseChangeLog>
