<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="20210311-create-tables-for-management-users" author="tuanba">
        <createTable tableName="USERS">
            <column name="ID" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="USERNAME" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="PASSWORD" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="PHONE_NUMBER" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="EMAIL" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="DOB" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="FIRST_NAME" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="LAST_NAME" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ACTIVE" type="tinyint(1)">
                <constraints nullable="false"/>
            </column>
            <column name="LAST_LOGIN_DATE" type="datetime"/>
            <column name="CREATED_AT" type="datetime"/>
            <column name="UPDATED_AT" type="datetime"/>
            <column name="DELETED_AT" type="datetime"/>
        </createTable>

        <createTable tableName="ROLES">
            <column name="ID" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="NAME" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="DESCRIPTION" type="varchar(255)"/>
            <column name="CREATED_AT" type="datetime"/>
            <column name="UPDATED_AT" type="datetime"/>
            <column name="DELETED_AT" type="datetime"/>
        </createTable>

        <createTable tableName="USER_ROLES">
            <column name="ID" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="USER_ID" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="ROLE_ID" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_AT" type="datetime"/>
            <column name="UPDATED_AT" type="datetime"/>
            <column name="DELETED_AT" type="datetime"/>
        </createTable>

        <createTable tableName="ACTIONS">
            <column name="ID" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="NAME" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_AT" type="datetime"/>
            <column name="UPDATED_AT" type="datetime"/>
            <column name="DELETED_AT" type="datetime"/>
        </createTable>

        <createTable tableName="FUNCTIONS">
            <column name="ID" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="NAME" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="URL" type="varchar(255)"/>
            <column name="PARENT_ID" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="STATUS" type="tinyint(1)">
                <constraints nullable="false"/>
            </column>
            <column name="SOFT_ORDER" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_AT" type="datetime"/>
            <column name="UPDATED_AT" type="datetime"/>
            <column name="DELETED_AT" type="datetime"/>
        </createTable>

        <createTable tableName="PERMISSIONS">
            <column name="ID" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="ROLE_ID" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="FUNCTION_ID" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="ACTION_ID" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_AT" type="datetime"/>
            <column name="UPDATED_AT" type="datetime"/>
            <column name="DELETED_AT" type="datetime"/>
        </createTable>

        <rollback>
            <dropTable tableName="USERS"/>
            <dropTable tableName="ROLES"/>
            <dropTable tableName="USER_ROLES"/>
            <dropTable tableName="ACTIONS"/>
            <dropTable tableName="FUNCTIONS"/>
            <dropTable tableName="PERMISSIONS"/>
        </rollback>
    </changeSet>

    <changeSet author="tuanba" id="2021-03-15-add-shop-id-column-on-users-table">
        <addColumn tableName="USERS">
            <column name="SHOP_ID" type="bigint">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <rollback>
            <dropColumn tableName="USERS" columnName="SHOP_ID"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
