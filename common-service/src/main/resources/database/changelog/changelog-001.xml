<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="20210311-create-tables-for-management-location" author="tuanba">
        <createTable tableName="COUNTRIES">
            <column name="ID" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="NAME" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_AT" type="datetime"/>
            <column name="UPDATED_AT" type="datetime"/>
            <column name="DELETED_AT" type="datetime"/>
        </createTable>

        <createTable tableName="AREAS">
            <column name="ID" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="NAME" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_AT" type="datetime"/>
            <column name="UPDATED_AT" type="datetime"/>
            <column name="DELETED_AT" type="datetime"/>
        </createTable>

        <createTable tableName="PROVINCES">
            <column name="ID" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="NAME" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="COUNTRY_ID" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_province_country" references="COUNTRIES(ID)"/>
            </column>
            <column name="AREA_ID" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_AT" type="datetime"/>
            <column name="UPDATED_AT" type="datetime"/>
            <column name="DELETED_AT" type="datetime"/>
        </createTable>

        <createTable tableName="DISTRICTS">
            <column name="ID" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="NAME" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="PROVINCE_ID" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_district_province" references="PROVINCES(ID)"/>
            </column>
            <column name="CREATED_AT" type="datetime"/>
            <column name="UPDATED_AT" type="datetime"/>
            <column name="DELETED_AT" type="datetime"/>
        </createTable>

        <createTable tableName="WARDS">
            <column name="ID" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="NAME" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="DISTRICT_ID" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_ward_district" references="DISTRICTS(ID)"/>
            </column>
            <column name="CREATED_AT" type="datetime"/>
            <column name="UPDATED_AT" type="datetime"/>
            <column name="DELETED_AT" type="datetime"/>
        </createTable>

        <createTable tableName="ADDRESS">
            <column name="ID" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="NAME" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="WARD_ID" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_address_ward" references="WARDS(ID)"/>
            </column>
            <column name="CREATED_AT" type="datetime"/>
            <column name="UPDATED_AT" type="datetime"/>
            <column name="DELETED_AT" type="datetime"/>
        </createTable>
        <rollback>
            <dropTable tableName="COUNTRIES"/>
            <dropTable tableName="AREAS"/>
            <dropTable tableName="PROVINCES"/>
            <dropTable tableName="DISTRICTS"/>
            <dropTable tableName="WARDS"/>
            <dropTable tableName="ADDRESS"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
